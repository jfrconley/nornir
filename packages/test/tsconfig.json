{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "transform": "@nornir/rest/transform"
      },
      {
        "transform": "typia/lib/transform"
      }
    ],
    "outDir": "dist/",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "rootDir": "src",
    "stripInternal": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../rest"
    }
  ]
}
