{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "plugins": [
      {
        "transform": "@nrfcloud/ts-json-schema-transformer/dist/transform"
      },
      {
        "transform": "@nornir/rest/transform"
      }
    ],
    "outDir": "dist",
    "rootDir": "src",
    "composite": false,
    "incremental": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "src/**/*.json"
  ]
}
