{
  "name": "@nrfcloud/nornir",
  "description": "nrfcloud service monorepo template",
  "author": "John Conley <john.fr.conley@gmail.com>",
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-typescript": "^7.21.4",
    "@chialab/esbuild-plugin-html": "^0.17.2",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@nrfcloud/templates": "^1.4.0",
    "@nrfcloud/utils-eslint": "^1.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/eslint": "^8.37.0",
    "@types/node": "^18.15.11",
    "dprint": "^0.34.5",
    "esbuild": "^0.17.18",
    "eslint": "^8.38.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-html-reporters": "^3.1.4",
    "jest-junit": "^15.0.0",
    "multi-semantic-release": "^3.0.2",
    "plop": "^3.1.2",
    "scripts": "workspace:*",
    "semantic-release": "^21.0.1",
    "syncpack": "^9.8.4",
    "ts-patch": "3.0.0-beta3",
    "turbo": "^1.9.2",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": "please use pnpm",
    "pnpm": ">=6.32.4",
    "yarn": "please use pnpm"
  },
  "license": "UNLICENSED",
  "packageManager": "pnpm@6.32.4",
  "private": true,
  "scripts": {
    "clean": "rm -rf coverage reports node_modules/.cache/turbo && pnpm clean:turbo && pnpm turbo clean:single",
    "clean:turbo": "rm -rf node_modules/.cache/turbo",
    "lint": "dprint check && eslint packages/* --no-error-on-unmatched-pattern --cache && syncpack-list-mismatches",
    "lint:fix": "dprint fmt && eslint packages/* --no-error-on-unmatched-pattern --fix && syncpack-fix-mismatches && syncpack-format",
    "prepare": "patch-typescript && husky install",
    "release": "pnpm lint && pnpm build:clean && multi-semantic-release --ignore-private-packages",
    "test": "compile:tests && jest-esm --json --outputFile=reports/report.json",
    "watch": "pnpm -r --parallel compile:single:watch"
  },
  "type": "module"
}
